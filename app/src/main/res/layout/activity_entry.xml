<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.highlights.EntryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:textSize="36sp"
        android:id="@+id/entryDayOfMonthTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:id="@+id/entryDayOfWeekTextView"
        android:layout_alignTop="@+id/entryDayOfMonthTextView"
        android:layout_alignLeft="@+id/entryMonthAndYearTextView"
        android:layout_alignStart="@+id/entryMonthAndYearTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December 2014"
        android:id="@+id/entryMonthAndYearTextView"
        android:layout_alignBottom="@+id/entryDayOfMonthTextView"
        android:layout_toRightOf="@+id/entryDayOfMonthTextView"
        android:layout_toEndOf="@+id/entryDayOfMonthTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/entryEditText"
        android:layout_below="@+id/entryDayOfMonthTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
